@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Ekle</h3>
    </div>
    <form role="form">
        <div class="box-body">
            <div class="form-group">
                <label for="KategoriAdi">Kategori Adı</label>
                <input type="text" class="form-control" id="KategoriAdi" placeholder="Kategori Adı">
            </div>
            <div class="form-group">
                <label for="KategoriUrl">Kategori URL</label>
                <input type="text" class="form-control" id="KategoriUrl" placeholder="URL">
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" checked id="KategoriAktif">Aktif mi
                </label>
            </div>
            <a href="#" class="btn btn-default" onclick="KategoriEkle();">Kaydet</a>
        </div>
    </form>
</div>